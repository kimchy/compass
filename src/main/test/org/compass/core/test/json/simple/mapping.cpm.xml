<?xml version="1.0"?>
<!DOCTYPE compass-core-mapping PUBLIC
        "-//Compass/Compass Core Mapping DTD 2.2//EN"
        "http://www.compass-project.org/dtd/compass-core-mapping-2.2.dtd">

<compass-core-mapping>

    <root-json-object alias="a">
        <json-id name="id" />
        <json-property name="value" />
    </root-json-object>

    <root-json-object alias="b">
        <json-id name="id" />
        <json-property name="value" />
        <json-content name="test" />
    </root-json-object>

    <root-json-object alias="c">
        <json-id name="id" />
        <json-property name="int" value-converter="int" format="0000" />
        <json-property name="float" value-converter="float" format="0000.00" store="compress" />
    </root-json-object>

    <root-json-object alias="d">
        <json-id name="id" />
        <json-property name="value" null-value="kablam" />
    </root-json-object>

    <root-json-object alias="e">
        <json-id name="id" />
        <json-property name="value" />
        <json-property name="value" value-converter="int" format="0000" />
    </root-json-object>

</compass-core-mapping>
    
