<?xml version="1.0"?>
<!DOCTYPE compass-core-mapping PUBLIC
        "-//Compass/Compass Core Mapping DTD 2.2//EN"
        "http://www.compass-project.org/dtd/compass-core-mapping-2.2.dtd">

<compass-core-mapping>

    <root-json-object alias="a">
        <json-id name="id" />
        <json-property name="value" />
        <json-array name="arr">
            <json-property value-converter="int" />
        </json-array>
    </root-json-object>

    <root-json-object alias="b">
        <json-id name="id" />
        <json-property name="value" />
        <json-array name="arr" index-name="xarr">
            <json-property value-converter="int" />
        </json-array>
    </root-json-object>

    <root-json-object alias="c">
        <json-id name="id" />
        <json-property name="value" />
        <json-array name="arr">
            <json-object>
                <json-property name="arr-value" />
            </json-object>
        </json-array>
    </root-json-object>

</compass-core-mapping>
    
