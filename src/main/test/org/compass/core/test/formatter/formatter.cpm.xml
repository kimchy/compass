            <meta-data converter="myint">intFormatted</meta-data>
        </property>

        <property name="shortVal">
            <meta-data>shortSimple</meta-data>
            <meta-data converter="myshort">shortFormatted</meta-data>
        </property>

        <property name="longVal">
            <meta-data>longSimple</meta-data>
            <meta-data converter="mylong">longFormatted</meta-data>
        </property>

        <property name="bigIntegerVal">
            <meta-data>bigIntegerSimple</meta-data>
            <meta-data converter="mybiginteger">bigIntegerFormatted</meta-data>
        </property>

        <property name="doubleVal">
            <meta-data>doubleSimple</meta-data>
            <meta-data converter="mydouble">doubleFormatted</meta-data>
        </property>

        <property name="floatVal">
            <meta-data>floatSimple</meta-data>
            <meta-data converter="myfloat">floatFormatted</meta-data>
        </property>

        <property name="bigDecimalVal">
            <meta-data>bigDecimalSimple</meta-data>
            <meta-data converter="mybigdecimal">bigDecimalFormatted</meta-data>
        </property>

        <property name="dateVal">
            <meta-data>dateSimple</meta-data>
            <meta-data converter="mydate">dateFormatted</meta-data>
        </property>

    </class>

    <class name="A" alias="a1">

        <id name="id"/>

        <property name="intVal">
            <meta-data converter="myint">intFormatted</meta-data>
        </property>

        <property name="shortVal">
            <meta-data converter="myshort">shortFormatted</meta-data>
        </property>

        <property name="longVal">
            <meta-data converter="mylong">longFormatted</meta-data>
        </property>

        <property name="bigIntegerVal">
            <meta-data converter="mybiginteger">bigIntegerFormatted</meta-data>
        </property>

        <property name="doubleVal">
            <meta-data converter="mydouble">doubleFormatted</meta-data>
        </property>

        <property name="floatVal">
            <meta-data converter="myfloat">floatFormatted</meta-data>
        </property>

        <property name="bigDecimalVal">
            <meta-data converter="mybigdecimal">bigDecimalFormatted</meta-data>
        </property>

        <property name="dateVal">
            <meta-data converter="mydate">dateFormatted</meta-data>
        </property>
    </class>

    <class name="A" alias="a2">

        <id name="id"/>

        <property name="intVal">
            <meta-data>intSimple</meta-data>
            <meta-data format="0,000">intFormatted</meta-data>
        </property>

        <property name="shortVal">
            <meta-data>shortSimple</meta-data>
            <meta-data format="0,000">shortFormatted</meta-data>
        </property>

        <property name="longVal">
            <meta-data>longSimple</meta-data>
            <meta-data format="0,000">longFormatted</meta-data>
        </property>

        <property name="bigIntegerVal">
            <meta-data>bigIntegerSimple</meta-data>
            <meta-data format="0,000">bigIntegerFormatted</meta-data>
        </property>

        <property name="doubleVal">
            <meta-data>doubleSimple</meta-data>
            <meta-data format="0,000.00">doubleFormatted</meta-data>
        </property>

        <property name="floatVal">
            <meta-data>floatSimple</meta-data>
            <meta-data format="0,000.00">floatFormatted</meta-data>
        </property>

        <property name="bigDecimalVal">
            <meta-data>bigDecimalSimple</meta-data>
            <meta-data format="0,000.00">bigDecimalFormatted</meta-data>
        </property>

        <property name="dateVal">
            <meta-data>dateSimple</meta-data>
            <meta-data format="yyyy-MM-dd-HH">dateFormatted</meta-data>
        </property>

        <property name="timeVal">
            <meta-data>timeSimple</meta-data>
            <meta-data format="yyyy-MM-dd-HH">timeFormatted</meta-data>
        </property>

        <property name="timestampVal">
            <meta-data>timestampSimple</meta-data>
            <meta-data format="yyyy-MM-dd-HH">timestampFormatted</meta-data>
        </property>

    </class>

</compass-core-mapping>
    
